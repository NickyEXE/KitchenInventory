<h1>Based on your entire pantry, here's a few recipe ideas!</h1>
<div class="cards">
<% @recipes.each do |recipe| %>
  <div class="card">
        <%=link_to (image_tag recipe["image"]), spoonacular_path(recipe["id"])%> 
        <h1><%= recipe["title"] %></h1>
        <p>Used Ingredients: <%= recipe["usedIngredients"].map{|ingredient| ingredient["name"]}.join(", ").split(" ").map(&:capitalize).join(" ") %></p>
        <p>What you're missing: <%= recipe["missedIngredients"].map{|ingredient| ingredient["name"]}.join(", ").split(" ").map(&:capitalize).join(" ") %></p>
        <h3>Spoonacular Likes: <%= recipe["likes"] %></h3>
  </div>
</div>
<% end%>